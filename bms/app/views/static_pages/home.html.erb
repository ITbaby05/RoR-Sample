<% provide(:title, 'Feeds') %>
<style>
    .container {
        padding-right: 0!important;
        padding-left: 0!important;
        width: 1170px;
    }

    #one_maincolumn #detailrightbloc {
        width: 61%;
        float: right;
    }
</style>
<% if signed_in? %>
    <div id="one_maincolumn">
      <div class="container">
        <div id="detailarea" class="clearfix" style="text-align: left">
          <div class="row">
            <aside class="span4">
              <section>
                <%= render 'shared/user_info' %>
              </section>
              <section>
                <%= render 'shared/stats' %>
              </section>
              <section>
                <%= render 'shared/micropost_form' %>
              </section>
            </aside>
            <div class="span8">
              <h3>Feeds</h3>
              <%= render 'shared/feed' %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% else %>
    <div id="one_maincolumn">
      <div class="container">
        <div id="detailarea" class="clearfix">
          <div class="center hero-unit">
            <h1>Welcome to Feeds</h1>

            <h2>
              Please login to see your feeds
              <%= link_to "Login", signin_path %>
            </h2>

            <div>
              New User? <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>