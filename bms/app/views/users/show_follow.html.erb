<% provide(:title, @title) %>
<style>
    .container {
        padding-right: 0!important;
        padding-left: 0!important;
        width: 1170px;
    }

    #one_maincolumn #detailrightbloc {
        width: 61%;
        float: right;
    }
</style>
<div id="one_maincolumn">
  <div class="container">
    <div id="detailarea" class="clearfix">
      <div class="row">
        <aside class="span4">
          <section>
            <%= gravatar_for @user %>
            <h1><%= @user.name %></h1>
            <span><%= link_to "view my profile", @user %></span>
            <span><b>Microposts:</b> <%= @user.microposts.count %></span>
          </section>
          <section>
            <%= render 'shared/stats' %>
            <% if @users.any? %>
                <div class="user_avatars">
                  <% @users.each do |user| %>
                      <%= link_to gravatar_for(user, size: 30), user %>
                  <% end %>
                </div>
            <% end %>
          </section>
        </aside>
        <div class="span8">
          <h3><%= @title %></h3>
          <% if @users.any? %>
              <ul class="users">
                <%= render @users %>
              </ul>
              <%= will_paginate %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>