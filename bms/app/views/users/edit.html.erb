<% provide(:title, "Edit user") %>

<div class="block-border">
  <div class="block-content">
    <h2>Update your profile</h2>
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div style="height: 80px; margin-left: 15px">
            <%= gravatar_for @user %>
            <a href="http://gravatar.com/emails" style="float: left; font-weight: bold; font-size: 18px; margin-top: 30px; margin-left: 12px;">Change</a>
        </div>
        <p>
            <%= f.label :name %>
            <%= f.text_field :name %>
        </p>
        <p>
            <%= f.label :email %>
            <%= f.text_field :email %>
        </p>
        <p>
            <%= f.label :password %>
            <%= f.password_field :password %>
        </p>
        <p>
            <%= f.label :password_confirmation, "Confirm" %>
            <%= f.password_field :password_confirmation %>
        </p>
        <%= f.submit "Save changes", class: "btn btn-large btn-primary", style: "margin-bottom: 20px" %>
    <% end %>
  </div>
</div>